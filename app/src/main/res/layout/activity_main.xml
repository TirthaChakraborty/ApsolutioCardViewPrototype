<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.apsolutiocardviewproject.MainActivity">

    <androidx.cardview.widget.CardView
      android:layout_height="300sp"
        android:layout_width="match_parent"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="136dp"
            android:layout_height="121dp"
            android:layout_marginStart="16dp"

            android:layout_marginTop="60dp"
            android:layout_toLeftOf="@id/tv_profile"
            android:src="@drawable/ic_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_avatar" />

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="66dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="16dp"
            android:text="Age= 28"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:text="Your Net Worth is"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.58"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="8dp"
            android:text="Rs 14.20 crore"

            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.822"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="53dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="20dp"
            android:padding="3dp"
            android:text="or"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.591"
            app:layout_constraintStart_toEndOf="@+id/tv_profile" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="193dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="Rupees Fourteen Crores and Twenty lakh only"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tv_profile" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="200dp"
            android:layout_height="58dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="Note:your net worth is calculated based on data in Finakya app"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tv_profile" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="82dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="Aritro"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.392"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="421dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="2">

        <!--Row1-->
        <!--Column1-->

        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_bank"
                    app:srcCompat="@drawable/ic_bank"
                    android:background="@color/colorTransparent"/>

                <TextView
                    android:id="@+id/tv_item1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Bank Balance"
                    android:textStyle="bold"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tv_item1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 1.20 crore"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tv_item1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29th Jan,2020, 5:08pm"
                    android:textAlignment="center" />




            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Column2-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_investment"
                    app:srcCompat="@drawable/ic_investment" />

                <TextView
                    android:id="@+id/tv_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Investment Value"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_item2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 10 crore"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tv_item2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29th Jan,2020, 5:08pm"
                    android:textAlignment="center" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Row2-->
        <!--Column1-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_assets"
                    app:srcCompat="@drawable/ic_assets" />

                <TextView
                    android:id="@+id/tv_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Assets Value"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tv_item3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 5 crore"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tv_item3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29th Jan,2020, 5:08pm"
                    android:textAlignment="center" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Column2-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_loan"
                    app:srcCompat="@drawable/ic_loan" />

                <TextView
                    android:id="@+id/tv_item4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Loan Value"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_item4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 2 crore"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tv_item4_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29th Jan,2020, 5:08pm"
                    android:textAlignment="center" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add assets"
    android:onClick="addAssets"
    android:background="@color/colorPrimaryDark"
    android:textStyle="bold"
    android:textAlignment="center"
    android:textColor="@color/white"
    android:textSize="16dp"/>
</LinearLayout>