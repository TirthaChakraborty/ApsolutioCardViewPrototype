<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.apsolutiocardviewproject.MainActivity">

    <androidx.cardview.widget.CardView
      android:layout_height="220sp"
        android:layout_width="match_parent"
      >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="136sp"
                android:layout_height="121sp"
                android:layout_marginStart="16sp"

                android:layout_marginTop="36sp"
                android:layout_toLeftOf="@id/tv_profile"
                android:src="@drawable/ic_avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_avatar" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="66sp"
                android:layout_height="19sp"
                android:layout_centerInParent="true"
                android:layout_marginStart="60sp"
                android:layout_marginBottom="16sp"
                android:text="Age= 28"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="44sp"
                android:layout_marginStart="8sp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="8sp"
                android:text="Your Net Worth is"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.585"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginTop="23sp"
                android:layout_marginEnd="8sp"
                android:text="Rs 14.20 crore"

                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.822"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="53sp"
                android:layout_height="23sp"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:layout_marginBottom="8dp"
                android:padding="3sp"
                android:text="or"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.574"
                app:layout_constraintStart_toEndOf="@+id/tv_profile" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="193sp"
                android:layout_height="45sp"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:text="Rupees Fourteen Crores and Twenty lakh only"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.809"
                app:layout_constraintStart_toEndOf="@+id/tv_profile" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="200sp"
                android:layout_height="58sp"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:text="Note:your net worth is calculated based on data in Finakya app"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.815"
                app:layout_constraintStart_toEndOf="@+id/tv_profile" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="66sp"
                android:layout_height="0dp"
                android:layout_marginStart="8sp"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="8sp"
                android:text="Aritro"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_profile"
                app:layout_constraintEnd_toStartOf="@+id/textView4"
                app:layout_constraintHorizontal_bias="0.392"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="451sp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14sp"
        android:rowCount="2">

        <!--Row1-->
        <!--Column1-->

        <androidx.cardview.widget.CardView

            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_rowWeight="1.5"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginBottom="16sp"
            app:cardCornerRadius="8sp"
            app:cardElevation="8sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16sp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_bank"
                    app:srcCompat="@drawable/ic_bank"
                    android:background="@color/colorTransparent"/>

                <TextView
                    android:id="@+id/tv_item1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Bank Balance"
                    android:textStyle="bold"

                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_item1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs 1.20 crore"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item1_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="29th Jan,2020, 5:08pm"
                    android:textAlignment="center"
                    android:textSize="10dp" />




            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Column2-->
        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_rowWeight="1.5"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginBottom="16sp"
            app:cardCornerRadius="8sp"
            app:cardElevation="8sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16sp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_inv"
                    app:srcCompat="@drawable/ic_inv" />

                <TextView
                    android:id="@+id/tv_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Investment Value"
                    android:textStyle="bold"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_item2_2"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"


                    android:text="Rs 10 crore"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item2_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="29th Jan,2020, 5:08pm"
                    android:textAlignment="center"
                    android:textSize="10sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Row2-->
        <!--Column1-->
        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_rowWeight="1.5"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginBottom="16sp"
            app:cardCornerRadius="8sp"
            app:cardElevation="8sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16sp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_assets"
                    app:srcCompat="@drawable/ic_assets" />

                <TextView
                    android:id="@+id/tv_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Assets Value"
                    android:textStyle="bold"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_item3_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs 5 crore"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item3_3"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="29th Jan,2020, 5:08pm"
                    android:textAlignment="center"
                    android:textSize="10sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Column2-->
        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_rowWeight="1.5"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginBottom="16sp"
            app:cardCornerRadius="8sp"
            app:cardElevation="8sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16sp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_loan"
                    app:srcCompat="@drawable/ic_loan" />

                <TextView
                    android:id="@+id/tv_item4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Loan Value"
                    android:textStyle="bold"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_item4_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs 2 crore"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_item4_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29th Jan,2020, 5:08pm"
                    android:textSize="10sp"
                    android:textAlignment="center" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add assets"
    android:onClick="addAssets"
    android:background="@color/colorPrimaryDark"
    android:textStyle="bold"
    android:textAlignment="center"
    android:textColor="@color/white"
    android:textSize="16sp"/>
</LinearLayout>